{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "os-provided"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/go:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "15gb"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "workbench.colorTheme": "Dracula",
                "terminal.integrated.fontFamily": "Monocraft",
                "terminal.integrated.automationProfile.linux": {
                    "path": "/usr/bin/bash",
                    "args": [
                        "-l"
                    ]
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/usr/bin/bash",
                        "args": [
                            "-l"
                        ],
                        "icon": "terminal-bash"
                    }
                },
                "code-runner.runInTerminal": true,
                "code-runner.fileDirectoryAsCwd": true,
                "code-runner.enableAppInsights": false,
                "code-runner.executorMap": {
                    "javascript": "node",
                    "python": "python3 -u",
                    "go": "go run",
                    "shellscript": "bash",
                    "typescript": "ts-node",
                    "rust": "cargo run"
                },
                "editor.detectIndentation": false,
                "editor.formatOnSave": true,
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "[shellscript]": {
                    "editor.tabSize": 8,
                    "editor.insertSpaces": false
                },
                "[go]": {
                    "editor.tabSize": 8,
                    "editor.insertSpaces": false
                },
                "html.format.wrapLineLength": 100,
                "html.format.enable": true,
                "css.format.enable": true,
                "json.format.enable": true,
                "javascript.format.enable": true,
                "typescript.format.enable": true,
                "shellformat.effectLanguages": [
                    "shellscript"
                ],
                "python.linting.mypyEnabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "python.formatting.blackArgs": [
                    "--line-length",
                    "100"
                ],
                "python.testing.unittestArgs": [
                    "-v",
                    "-s",
                    "./tests",
                    "-p",
                    "test_*.py"
                ],
                "python.testing.pytestEnabled": false,
                "python.testing.unittestEnabled": true,
                "go.formatTool": "gofmt"
            },
            "extensions": [
                "dracula-theme.theme-dracula",
                "formulahendry.code-runner",
                "foxundermoon.shell-format",
                "ms-python.python",
                "golang.go",
                "rust-lang.rust-analyzer",
                "Vue.volar"
            ]
        }
    },
    "onCreateCommand": {
        "python": "python3 -m pip install mypy pylint black",
        "Monocraft": "mkdir -p ~/.local/share/fonts && curl https://github.com/IdreesInc/Monocraft/releases/download/v1.4/Monocraft.otf -o ~/.local/share/fonts/Monocraft.otf"
    }
}
